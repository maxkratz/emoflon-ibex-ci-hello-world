import "http://www.eclipse.org/emf/2002/Ecore"
import "platform:/resource/org.emoflon.ci.helloworld/model/Helloworld.ecore" 

rule addCountryToWorld() {
	world: World {
		++ -countries -> country
		.counter := world.counter + 1
	}
	
	country: Country {
		
	}
}

rule addCountry() {
	++ country: Country
}

rule addGermany() refines addCountry {
	++ country: Country {
		.name := "germany"
		.population := 42
	}
}

pattern findCountry() {
	country: Country
}
